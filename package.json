{
    "name": "quickshoot-match-server",
    "version": "0.0.0",
    "description": "QuickShoot game match server",
    "repository": "https://github.com/nieltg/quickshoot-match-server",
    "author": "Daniel <nieltansah@gmail.com>",
    "license": "MIT",
    "private": true,
    "scripts": {
        "build": "tsc",
        "test": "$npm_execpath run build && ava",
        "prepublish": "$npm_execpath run test"
    },
    "devDependencies": {
        "@types/express": "^4.17.0",
        "@types/node": "^12.0.10",
        "ava": "^2.1.0",
        "husky": "^3.0.0",
        "lint-staged": "^9.0.1",
        "prettier": "^1.18.2",
        "tslint": "^5.18.0",
        "tslint-config-prettier": "^1.18.0",
        "tslint-plugin-prettier": "^2.0.1",
        "typescript": "^3.5.2"
    },
    "dependencies": {
        "express": "^4.17.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.{js,jsx,ts,tsx}": [
            "tslint -p . --fix",
            "git add"
        ],
        "**/*.json": [
            "prettier --write",
            "git add"
        ]
    },
    "prettier": {
        "semi": false
    }
}